exec swayosd-server
exec pipewire
exec pipewire-pulse
exec wireplumber
exec mako
exec waybar

default_border none 

set $mod Mod4

set $left h
set $down j
set $up k
set $right l

exec swaybg -i ~/.config/sway/current-wallpaper -m fill

output eDP-1 {
	mode 1440x900@59.996Hz
	pos 0 0 
}

input type:touchpad {
    tap enabled
    natural_scroll enabled
}

exec --no-startup-id swaymsg -t get_outputs | grep 'HDMI-A-1' | grep -q connected && swaymsg output HDMI-A-1 mode 1920x1080@60.000Hz focus

set $browser zen
set $term kitty
set $menu wofi --show drun
set $files spf

bindsym $mod+Return exec $term
bindsym $mod+Mod1+w exec ~/.config/sway/scripts/wallpaper.sh

bindsym $mod+q kill

bindsym $mod+space exec "pgrep wofi >/dev/null 2>&1 && killall wofi || wofi --show drun"

bindsym $mod+b exec $browser
bindsym $mod+shift+b exec $browser --private-window

bindsym $mod+e exec $term -e $files
bindsym $mod+n exec $term -e nvim

bindsym $mod+Shift+c reload

bindsym $mod+Shift+e exec swaymsg exit

bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

bindsym $mod+f fullscreen

bindsym XF86AudioRaiseVolume exec swayosd-client --output-volume raise --monitor=eDP-1
bindsym XF86AudioLowerVolume exec swayosd-client --output-volume lower --monitor=eDP-1
bindsym XF86AudioMute exec swayosd-client  --output-volume mute-toggle --monitor=eDP-1


#Keychron Wheel + Mod to scroll through workspaces
bindsym $mod+XF86AudioRaiseVolume workspace next
bindsym $mod+XF86AudioLowerVolume workspace prev


#Keychron wheel + alt to change brightness
bindsym Alt+XF86AudioRaiseVolume exec swayosd-client --brightness +5 --monitor=eDP-1
bindsym Alt+XF86AudioLowerVolume exec swayosd-client --brightness -5 --monitor=eDP-1


bindsym XF86MonBrightnessUp exec swayosd-client --brightness +5 --monitor=eDP-1
bindsym XF86MonBrightnessDown exec swayosd-client --brightness -5 --monitor=eDP-1

bindsym Shift+XF86MonBrightnessUp exec swayosd-client --brightness +1 --monitor=eDP-1
bindsym Shift+XF86MonBrightnessDown exec swayosd-client --brightness -1 --monitor=eDP-1

bindsym $mod+tab workspace next
bindsym $mod+Shift+tab workspace prev

bindsym XF86AudioNext exec swayosd-client --playerctl next --monitor=eDP-1
bindsym XF86AudioPause exec swayosd-client --playerctl play-pause --monitor=eDP-1
bindsym XF86AudioPlay exec swayosd-client --playerctl play-pause --monitor=eDP-1
bindsym XF86AudioPrev exec swayosd-client --playerctl previous --monitor=eDP-1

bindsym $mod+g exec grim -t ppm - | satty --filename - --output-filename ~/Pictures/Screenshots/satty-$(date +'%Y%m%d-%H:%M:%S').png
bindsym $mod+s exec grim -g "$(slurp -c '#ff0000ff')" -t ppm - | satty --filename - --output-filename ~/Pictures/Screenshots/satty-$(date +'%Y%m%d-%H:%M:%S').png
